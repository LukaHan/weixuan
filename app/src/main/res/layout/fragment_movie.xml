<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wx.show.wxnews.activity.HomeActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        tools:context="com.cjj.jjsearchviewanim.MainActivity">

        <com.cjj.sva.JJSearchView
            android:id="@+id/jjsv"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" />

        <android.support.v7.widget.SearchView
            android:visibility="gone"
            android:id="@+id/search_View"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" />

        <TextView
            android:drawableRight="@drawable/right_arrow"
            android:id="@+id/tv_loc"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="定位城市" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <it.neokree.materialtabs.MaterialTabHost
            android:id="@+id/materialTabHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:accentColor="@color/customizeColorAccent"
            app:primaryColor="@color/customizeMovieColorPrimary"
            app:textColor="#FFFFFF" />

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/activity_main"></include>

</LinearLayout>
